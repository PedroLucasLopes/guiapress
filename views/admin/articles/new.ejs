<!DOCTYPE html>
<html lang="pt-br">
<%- include ('../../partials/head.ejs') %>

    <body>
        <%- include ('../../partials/navbar.ejs') %>
            <div class="container d-flex justify-content-center">
                <div class="card w-50">
                    <div class="card-header">
                        <h2 class="text-center">Novo Artigo</h2>
                    </div>
                    <div class="card-body">
                        <form class="mt-2 d-flex flex-column" method="POST" action="/articles/save">
                            <input type="text" name="title" placeholder="Defina o tÃ­tulo do Artigo"
                                class="form-control mb-3">
                            <textarea class="form-control" name="body" id="article"
                                placeholder="Escreva o artigo aqui"></textarea>
                            <label for="category" class="mt-3">Categoria</label>
                            <select name="category" id="category" class="mt-1 form-control">
                                <% categories.forEach((category)=> { %>
                                    <option value="<%= category.id %>">
                                        <%= category.title %>
                                    </option>
                                    <%})%>
                            </select>
                            <button class="btn btn-primary w-25 mt-3">
                                Cadastrar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <%- include ('../../partials/bootstrapScript.ejs') %>
                <script src="/tinymce/tinymce.min.js"></script>
                <script>
                    tinymce.init({
                        language: 'pt_BR',
                        selector: '#article',
                        plugins: [
                            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
                        ]
                    });
                </script>
    </body>

</html>