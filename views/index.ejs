<!DOCTYPE html>
<html lang="pt-br">
<%- include ('partials/head.ejs') %>

    <body>
        <%- include ('partials/homenavbar.ejs') %>
            <div class="container">
                <% articles.forEach((article)=> {%>
                    <div class="card mb-3">
                        <div class="card-header h-50 d-flex align-items-center">
                            <p class="text-start pt-3">
                                <%= article.title %>
                            </p>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <a href="/<%= article.slug %>" class="btn btn-success text-center h-50">Ler artigo</a>
                        </div>
                    </div>
                    <% }) %>
                        <div class="row">
                            <div class="col col-12">
                                <a href="/articles/page/2" style="float: right">Next</a>
                            </div>
                        </div>
            </div>
            <%- include ('partials/bootstrapScript.ejs') %>
    </body>

</html>